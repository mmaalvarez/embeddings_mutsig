nextflow.enable.dsl=2

params {
	// input files
    input_files_list = "${System.env.work_dir}/data/sample_metadata/cancer_analysis_aggregated_vcf_autosomal_chunks_paths.tsv"
    sample_list = "${System.env.work_dir}/data/sample_metadata/cancer_analysis_sample_ids.tsv"
    sample_metadata = "${System.env.work_dir}/data/sample_metadata/cancer_analysis_metadata.tsv"
    high_LD_regions = "${System.env.work_dir}/data/high_LD_regions/high-LD-regions-hg38-GRCh38.tsv"
    good_mappability_regions = "${System.env.work_dir}/data/good_mappability_regions/GRCh38.d1.vd1.mappability_75bp_1_22_XY_woblacklist.tsv"
    original_continuous_phenotype = "${System.env.work_dir}/data/degasperi_cosmic_exposures/RefSig_SBS_Exposures_v2.03.tsv"

	// parameter values
    bcftools_command = "concat"
    n_PCs_ancestry_clustering = 10
    fraction_ancestry_outliers_trimmed = 0.01
    samples_cohort = 250
    min_samples_cohort_tumor = 200
    restriction_factor = 1
    highIBDTh = 0.1875
    n_PCs_covariates = 20

	// time, memory, and partition per process demands
    time_process_low = 1
    time_process_medium = 4
    time_process_high = 12
    time_process_very_high = 48
    memory_process_low = 0.7
    memory_process_medium = 4
    memory_process_high = 10
    memory_process_very_high = 100
	partition_fast_short = "${System.env.partition_fast_short}"
	partition_slow_long = "${System.env.partition_slow_long}"
	partition_slowest_unlimited = "${System.env.partition_slowest_unlimited}"
}

