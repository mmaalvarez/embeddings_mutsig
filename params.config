params {

    // input files

    work_dir = "${System.env.work_dir}/"
    files_dir = "data/nn_input/cell_lines_SNVs/"
    training_set = "all_cancertypes_df_train"
    validation_set = "all_cancertypes_df_validate"
    testing_set = "all_cancertypes_df_test"
    all_sets = "all_cancertypes_df_all"


    // parameter values

    batch_size = [256,512,1024]
    learning_rate = [0.0005,0.0008,0.0011]
    patience = [10,20,30]
    fc1_neurons = [16,32,64]
    fc2_neurons = [32,64,128]
    dropout1_rate = [0.1,0.2,0.3]
    dropout2_rate = [0.2,0.3,0.4]
    kernel_size1 = [2,3,4]
    kernel_size2 = [2,3,4]
    kernel_size3 = [2,3,4]
    training_perc = 70
    validation_perc = 15
    test_perc = 15
    subsetting_seed = 1


    // time, memory, and partition per process demands

    time_4h = 4
    time_10h = 10
    time_1d = 24
    time_2d = 48
    memory_1G = 1
    memory_4G = 4
    memory_10G = 10
    memory_50G = 50
    partition_fast_short = "${System.env.partition_fast_short}"
    partition_slow_long = "${System.env.partition_slow_long}"
    partition_slowest_unlimited = "${System.env.partition_slowest_unlimited}"
}
